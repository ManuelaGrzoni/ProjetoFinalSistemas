@page
@model EventosModel
@{
    ViewData["Title"] = "Lista de Eventos";
}

<h1>Lista de Eventos</h1>

@if (Model.Eventos == null || !Model.Eventos.Any())
{
    <p>No hay eventos disponibles.</p>
}
else
{
    <ul>
        @foreach (var evento in Model.Eventos)
        {
            <li>@evento.Nombre - @evento.Fecha.ToShortDateString() (@evento.Ubicacion)</li>
        }
    </ul>
}
